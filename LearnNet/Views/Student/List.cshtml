@model IList<StudentViewModel>


@if (TempData["info"] != null)
{
    <div class="alert alert-info">
        @TempData["info"]
    </div>
}
else if (TempData["error"] != null)
{
    <div class="alert alert-danger">
        @TempData["error"]
    </div>
}
<table class="table table-hover" id="StudentTable">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Email</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        @{
            int index = 1;
        }
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@index</th>
                <td>@item.StudentName</td>
                <td>
                    @item.Email
                   
                </td>
               
                <td>
                    <div class="btn btn-group">
                        <a asp-controller="Student" asp-action="Edit" asp-route-id="@item.StudentId" class="btn btn-primary" role="button">Edit</a>
                        <a asp-controller="Student" asp-action="Delete" asp-route-id="@item.StudentId" onclick="return confirm('are you sure to delete this record?');" class="btn btn-danger" role="button"> Delete</a>
                    </div>
                </td>
            </tr>
            index++;
        }
    </tbody>
</table>
<script>
    $(document).ready(function () {
        $('#StudentTable').DataTable();
    });
</script>